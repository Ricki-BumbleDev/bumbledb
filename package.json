{
  "name": "bumbledb",
  "version": "0.11.0",
  "description": "Embedded, file-based database with MongoDB-like API for Node.js",
  "keywords": [
    "database",
    "datastore",
    "db",
    "embedded",
    "lokijs",
    "mongodb",
    "nedb",
    "nosql",
    "tingodb"
  ],
  "repository": {
    "url": "git+https://github.com/Ricki-BumbleDev/bumbledb.git"
  },
  "license": "MIT",
  "author": "BumbleDev",
  "type": "module",
  "types": "./lib/index.d.ts",
  "exports": {
    "types": "./lib/index.d.ts",
    "import": "./lib/index.js",
    "require": "./lib/index.cjs",
    "default": "./lib/index.js"
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "rimraf lib && mkdir lib && tsc && mv .temp/esm/index.js lib/index.js && mv .temp/esm/index.d.ts lib/index.d.ts && tsc -p tsconfig.cjs.json && mv .temp/cjs/index.js lib/index.cjs && rimraf .temp",
    "prepare": "npm run build",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "lodash.get": "^4.4.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lodash.get": "^4.4.9",
    "@types/node": "^25.3.2",
    "jest": "^30.2.0",
    "rimraf": "^6.1.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
